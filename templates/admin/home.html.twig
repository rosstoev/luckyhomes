{% extends 'admin/base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="my-table-style table-responsive">
            <table id="admin-table" class="table table-hover table-bordered" style="width: 100%">
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Име</th>
                    <th scope="col">Статус</th>
                    <th scope="col">Етаж</th>
                    <th scope="col">Опции</th>
                </tr>
                </thead>
                <tbody>
                {% for apartment in apartments %}
                    <tr>
                        <td>{{ apartment.id }}</td>
                        <td>{{ apartment.name }}</td>
                        <td>{{ apartment.status }}</td>
                        <td>{{ apartment.floor.name }}</td>
                        <td>
                            <a href="{{ path('view_apartment', {'apartment': apartment.id}) }}"
                               class="btn btn-outline-dark">Виж</a>
                            <a href="{{ path('edit_apartment', {'apartment': apartment.id}) }}"
                               class="btn btn-outline-dark">Промени</a>
                            <a href="{{ path('delete_apartment', {'apartment': apartment.id}) }}"
                               class="btn btn-outline-danger">Изтрии!</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}